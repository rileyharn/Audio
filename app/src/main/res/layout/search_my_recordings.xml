<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="458dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/downloadedRecordingstextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7E90BF"
            android:fontFamily="sans-serif-medium"
            android:text="Search through your saved recordings"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nameOfSelectedAudio"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:fontFamily="sans-serif-medium"
            android:text="Name of selected audio:"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9DADD7"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="leftButton"
                android:text="Left" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="rightButton"
                android:text="Right" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stopButtonSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="stpoAudio"
                android:text="Stop Audio" />

            <Button
                android:id="@+id/playButtonSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playAudio"
                android:text="Play Audio" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="?attr/colorPrimary"
        android:onClick="backButton"
        android:text="@string/back"
        app:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="1000000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:rippleColor="?attr/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>